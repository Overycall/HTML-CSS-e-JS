<link rel="stylesheet" href="/css/listProducts.css">


<div class="container">
    {{#if newProduct}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Produto Cadastrado com Sucesso!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}

     {{#if editProduct}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Produto Editado com Sucesso!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Meus Produtos</h5>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="input-group mb-3">
                    <input type="text" class="form-control input-default" placeholder="Ex: Camisa Slim"
                        aria-label="Buscar Produtos" aria-describedby="findAddons">
                    <div class="input-group-append">
                        <span class="input-group-text" id="findAddons">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    {{#each products}}
                    <div class="col col-sm-3 l">
                        <div class="card">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <img src="/images/img-teste.png" class="img-fluid" alt="Responsive image">
                                </li>
                                <li class="list-group-item">
                                    <div class="list-group-item-active">
                                        Produtos:
                                    </div>
                                    <div>
                                        {{dataValues.name}}
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="list-group-item-active">
                                        Valor:
                                    </div>
                                    <div>
                                        {{dataValues.salePrice}}
                                    </div>
                                </li>

                                <div class="modal fade" id="{{dataValues.uuid}}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">{{dataValues.name}}</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                 <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>    
                                        <div class="modal-body">
                                            <h6>Descrição:   {{dataValues.description}}</h6>
                                            <h6>Categoria:   {{dataValues.category}}</h6>
                                            <h6>Preço de Custo:   {{dataValues.costPrice}}</h6>
                                            <h6>Preço de Venda:   {{dataValues.salePrice}}</h6>
                                            {{#if dataValues.active}}
                                                <h6>Produto ativado</h6>
                                            {{else}}
                                                <h6>Produto desativado</h6>
                                            {{/if}}
                                            <h6>Porcentagem do Valor de Venda:   {{dataValues.ratioSalePrice1}}</h6>
                                            <h6>Porcentagem do Valor de Venda:   {{dataValues.ratioSalePrice2}}</h6>
                                            <h6>Porcentagem do Valor de Venda:   {{dataValues.ratioSalePrice3}}</h6>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="/products/edit/{{dataValues.uuid}}">
                                             <button type="button" class="btn btn-lg">Editar Produto</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                </div>

                                <div class="modal fade" id="delete-{{dataValues.uuid}}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">{{dataValues.name}}</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                 <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>    
                                        <div class="modal-body">
                                            <h6>Você realmente deseja excluir este produto? Esta operação não poderá ser desfeita. </h6>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-lg" data-dismiss="modal" aria-label="Close">
                                                 Cancelar
                                            </button>
                                            <a href="/products/delete/{{dataValues.uuid}}">
                                             <button type="button" class="btn btn-lg-danger">Excluir produto</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                </div>

                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col col-sm-6">
                                            <button class="btn btn-lg" data-toggle="modal" data-target="#{{dataValues.uuid}}">Detalhes</button>
                                        </div>
                                        <div class="col col-sm-6">
                                            <button class="btn btn-lg-danger" data-toggle="modal" data-target="#delete-{{dataValues.uuid}}">Excluir</button>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {{/each}}
                    
                </div>

            </div>
        </div>
        <div class="card-header card-footer pagination-centered">
            <i class="fas fa-chevron-left"></i>
            <a href="#" class="link-active">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#">3</a>
            ...
            <a href="#">10</a>
            <i class="fas fa-chevron-right"></i>
        </div>
    </div>
</div>