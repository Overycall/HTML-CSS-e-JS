<div class="container" style="margin-top: 10px;">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">CADASTRAR NOVO MEMBRO DA EQUIPE</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/cadastrar">
                <div class="form-group">
                    <label for="inputName">Insira seu Nome:</label>
                    <input type="text" class="form-control input-default" name="name" id="inputName" aria-describedby="emailHelp"
                        placeholder="Digite seu nome">
                </div>
                <div class="form-group">
                    <label for="inputSobrenome">Insira seu Sobrenome:</label>
                    <input type="text" class="form-control input-default" name="lastName" id="inputSobrenome" aria-describedby="emailHelp"
                        placeholder="Digite seu Sobrenome">
                </div>
                <div class="form-group">
                    <label for="inputEmail">Insira seu E-mail:</label>
                    <input type="email" class="form-control input-default" name="email" id="inputEmail" aria-describedby="emailHelp"
                        placeholder="Digite seu email">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Senha:</label>
                    <input type="password" class="form-control input-default" name="password" id="inputPassword" placeholder="Password">
                    <label class="text-danger" for="password-error"></label>
                </div>
                <div class="form-group">
                    <label for="inputPasswordConfirm">Confirme a Senha:</label>
                    <input type="password" class="form-control input-default" name="confirmPassword" id="inputPasswordConfirm" placeholder="Password">
                    <label class="text-danger" for="password_confirm-error"></label>
                </div>
                <div class="card-header card-footer">
                    <button type="submit" class="btn btn-lg">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $('#inputPassword').on('keyup', function () {
            if ($(this).val().length > 0 && $(this).val().length < 8) {
                $('label[for="password-error"]').text('A senha deve conter pelo menos 8 caracteres.')

            } else {
                $('label[for="password-error"]').text(null)
            }
        });

        $('#inputPasswordConfirm').on('keyup', function () {
            if ($(this).val() !== $('#inputPassword').val()) {
                $('label[for="password_confirm-error"]').text('Senhas nÃ£o conferem.')

            } else {
                $('label[for="password_confirm-error"]').text(null)
            }
        });
</script>
